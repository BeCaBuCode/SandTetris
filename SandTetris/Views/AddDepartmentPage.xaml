<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SandTetris.Views.AddDepartmentPage"
             xmlns:viewmodel="clr-namespace:SandTetris.ViewModels"
             x:DataType="viewmodel:AddDepartmentPageViewModel"
             Shell.NavBarIsVisible="False">

    <ScrollView
        Padding="20">
        <Grid
            ColumnDefinitions=".20*, .12*, .48*, .20*"
            ColumnSpacing="10"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
            RowSpacing="10">
            <Label
                Text="Department Information"
                Padding="0, 0, 0, 30"
                FontSize="24" 
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"/>

            <Label
                Text="ID"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Grid.Row="1"
                Grid.Column="1" />
            <Entry
                Grid.Row="1"
                Grid.Column="2" 
                Text="{Binding ThisDepartment.Id}"/>

            <Label
                Text="Name"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Grid.Row="2"
                Grid.Column="1" />
            <Entry
                Grid.Row="2"
                Grid.Column="2" 
                Text="{Binding ThisDepartment.Name}"/>

            <Label
                Text="Head ID"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Grid.Row="3"
                Grid.Column="1" 
                IsVisible="{Binding IsInvisible}"/>
            <Entry
                Grid.Row="3"
                Grid.Column="2" 
                Text="{Binding ThisDepartment.HeadOfDepartmentId}"
                IsReadOnly="True"
                Placeholder="None"
                IsVisible="{Binding IsInvisible}">
                <Entry.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding HeadOfDepartmentTappedCommand}" />
                </Entry.GestureRecognizers>
            </Entry>

            <Label
                Text="Description"
                HorizontalOptions="Start"
                Grid.Row="4"
                Grid.Column="1" />
            <Editor
                HeightRequest="100"
                Grid.Row="4"
                Grid.Column="2" 
                Text="{Binding ThisDepartment.Description}"/>

            <HorizontalStackLayout
                Margin="0, 32, 0, 0"
                Spacing="32"
                HorizontalOptions="CenterAndExpand"
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <Button
                    WidthRequest="100"
                    Text="Submit" 
                    Command="{Binding SubmitCommand}"/>
                <Button
                    WidthRequest="100"
                    Text="Cancel" 
                    Command="{Binding CancelCommand}"/>
            </HorizontalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>